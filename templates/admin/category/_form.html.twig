<form name="category" class="form-horizontal" method="post">
    <div class="card-body">
        <div class="form-group row">
            <label for="fname" class="col-sm-3 text-right control-label col-form-label">Parent</label>
            <div class="col-sm-9">
                <select id="category_parentid" name="category[parentid]" class="form-control">
                        <option value="0" class="col-sm-5"> Main Category </option>
                        {% for cat in categories %}
                            <option value="{{ cat.id }}" {{ cat.id == category.parentid ? 'Selected':'' }}>{{ cat.title }}</option>
                        {% endfor %}
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label for="lname" class="col-sm-3 text-right control-label col-form-label">Category Name</label>
            <div class="col-sm-9">
                <input type="text" name="category[title]" class="form-control" id="category_title" value="{{ category.title }}" required="required">
            </div>
        </div>
        <div class="form-group row">
            <label for="lname" class="col-sm-3 text-right control-label col-form-label">Keywords</label>
            <div class="col-sm-9">
                <input type="text" name="category[keywords]" class="form-control" id="category_keywords" value="{{ category.keywords }}">
            </div>
        </div>
        <div class="form-group row">
            <label for="email1" class="col-sm-3 text-right control-label col-form-label">Description</label>
            <div class="col-sm-9">
                <input type="text" name="category[description]" class="form-control" id="category_description" value="{{ category.description }}">
            </div>
        </div>
        <div class="form-group row">
            <label class="col-form-label col-sm-3 text-right control-label" for="category_image">Category Image</label>
            <div class="col-sm-9">
                <div class="custom-file">
                    <input type="file" id="category_image" name="category[image]" value="{{ category.image }}" class="custom-file-input">
                    <label for="category_image" class="custom-file-label"></label>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <label for="cono1" class="col-sm-3 text-right control-label col-form-label">Status</label>
            <div class="col-sm-9">
                <select id="category_status" name="category[status]" class="form-control">
                    <option>{{ category.status }}</option>
                    <option>True</option>
                    <option>False</option>
                </select>
            </div>
        </div>
    </div>
    <div class="border-top">
        <div class="card-body">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </div>
</form>