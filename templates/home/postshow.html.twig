                                <div class="blog-thumbnail">
                                    <img src="{{ asset('img') }}/bg-img/15.jpg" alt="">
                                </div>
                                <!-- Blog Content -->
                                <div class="blog-content">
                                    <a href="#" class="post-title">Tortilla prawns</a>
