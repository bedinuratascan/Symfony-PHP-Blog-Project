{% extends 'userbase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}

    <div class="container">
        <div class="row profile">
            <div class="col-md-3">
                <div class="profile-sidebar">
                    <!-- SIDEBAR USERPIC -->
                    <div class="profile-userpic">
                        <img src="{{ asset('uploads/image/' ~ app.user.image) }}" class="img-responsive" alt="user">
                    </div>
                    <!-- END SIDEBAR USERPIC -->
                    <!-- SIDEBAR USER TITLE -->
                    <div class="profile-usertitle">
                        <div class="profile-usertitle-name">
                            Marcus Doe
                        </div>
                        <div class="profile-usertitle-job">
                            Developer
                        </div>
                    </div>
                    <!-- END SIDEBAR USER TITLE -->
                    <!-- SIDEBAR BUTTONS -->
                    <div class="profile-userbuttons">
                        <button type="button" class="btn btn-success btn-sm">Follow</button>
                        <button type="button" class="btn btn-danger btn-sm">Message</button>
                    </div>
                    <!-- END SIDEBAR BUTTONS -->
                    <!-- SIDEBAR MENU -->
                    <div class="profile-usermenu">
                        <ul class="nav">
                            <li>
                                <a href="/user">
                                    <i class="glyphicon glyphicon-home"></i>My Profile</a>
                            </li>
                        </ul>
                        <ul class="nav">
                            <li>
                                <a href="/user/post">
                                    <i class="glyphicon glyphicon-user"></i> My Post </a>
                            </li>
                        </ul>
                        <ul class="nav">
                            <li>
                                <a href="/user/comments" target="_blank">
                                    <i class="glyphicon glyphicon-ok"></i>My Comments</a>
                            </li>
                        </ul>
                        <ul class="nav">
                            <li>
                                <a href="/logout">
                                    <i class="glyphicon glyphicon-flag"></i>Logout </a>
                            </li>
                        </ul>
                    </div>
                    <!-- END MENU -->
                </div>
            </div>
            <div class="col-md-9">
                <div class="profile-content">
                    <h1>Create new Post</h1>

                    {{ include('post/_form.html.twig') }}

                    <a href="{{ path('user_post_index') }}">back to list</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
